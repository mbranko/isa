<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="WebShop" transaction-type="RESOURCE_LOCAL">
    <provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
    <class>isa.pr17.Admin</class>
    <class>isa.pr17.Category</class>
    <class>isa.pr17.OrderItem</class>
    <class>isa.pr17.Product</class>
    <class>isa.pr17.ProductImage</class>
    <class>isa.pr17.PurchaseOrder</class>
    <class>isa.pr17.Supplier</class>
    <class>isa.pr17.User</class>
    <properties>
      <property name="openjpa.ConnectionDriverName" value="com.mysql.jdbc.Driver"/>
      <property name="openjpa.ConnectionURL" value="jdbc:mysql://localhost/isa"/>
      <property name="openjpa.ConnectionUserName" value="isa"/>
      <property name="openjpa.ConnectionPassword" value="isa"/>
      <property name="openjpa.Log" value="DefaultLevel=WARN, Tool=WARN"/>
    </properties>
  </persistence-unit>
</persistence>